<%= form_for :blog, url: blog_path(@blog), method: :patch do |f| %>
<p>
<%=f.label :title%>
<%=f.text_field :title%>
</p>

<p>
<%=f.label :description%>
<%=f.text_field :description%>
</p>
<p>
  <strong>Category:</strong>
  <%= f.select(:category_id, Category.all.collect {|u| [u.name, u.id]}, :prompt => 'Select Category') %>
</p>
<p>
<%=f.label :image%>
<%=f.file_field :image%>
</p>
<p>
<%=f.submit %>
</p>
<%end%>
<%= link_to 'Back', blogs_path %>